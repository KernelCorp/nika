.basket
	%span.h1
		Ваш заказ
	%form.form
		-1.upto(4) do |i|
			.basket_elem_wrapper
				%span.ie-border-left
				%table.basket_elem
					%thead
						%tr
							%th.center
								фото
							%th
								название:
							%th
								артикул:
							%th
								цена:
							%th.center
								кол-во:
					%tbody
						%tr
							%td.center
								%img{:src => 'images/small/stock.jpg'}
							%td
								Детская "Глобус #{i}"
							%td
								67838495#{i}2
							%td
								32 #{i}00 р.
							%td.center
								1
				%span.ie-border-right


		.right
			%table.total
				%thead
					%tr
						%th.bold
							Итоговые
						%th.t-weight
							вес:
						%th.t-volume
							объём:
						%th.t-cost
							стоимость:
				%tbody
					%tr
						%td
							&nbsp;
						%td.t-weight
							%span.total_weight
								160
							кг.
						%td.t-volume
							%span.total_volume
								4002
							см<sup>3</sup>.
						%td.t-cost
							%span.total_cost
								32 000
							р.

			%button{:type => 'submit', :class => 'button', :id => 'confirm-order'}
				%span.ie-border-left
				подтвердить заказ
				%span.ie-border-right